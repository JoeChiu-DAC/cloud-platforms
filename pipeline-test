def project = "cloud-platforms"
def script = "stop-vms.yml"
def task = "gcp"
def workspace = pwd()
def repositoryUrl = "https://github.com/joehmchiu/${project}.git"
def branch = "master"
def msg = "VMs powered off"

pipeline {
    agent any

    stages {
        stage( 'Confirm' ) {
            steps {
                timeout(time: 30, unit: 'SECONDS') {
                    input "${msg}?"
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
