project = "cloud-platforms"
script = "stop-vms.yml"
task = "gcp"
repositoryUrl = "https://github.com/joehmchiu/${project}.git"
branch = "master"
msg = "VMs powered off"

stage 'run script somewhere else'
node(){
    echo msg
}
stage 'Confirm'
node() {
    timeout(time: 30, unit: 'SECONDS') {
        input "${msg}?"
    }
}
