    project = "cloud-platforms"
    script = "stop-vms.yml"
    def task = "gcp"
    def workspace = pwd()
    def repositoryUrl = "https://github.com/joehmchiu/${project}.git"
    def branch = "master"
    def msg = "VMs powered off"

node {
    stage 'Confirm'
    timeout(time: 30, unit: 'SECONDS') {
        input "${msg}?"
    }

    load "/opt/bin/jenkins-jobs.groovy"
}
